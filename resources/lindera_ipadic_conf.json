{
    "character_filters": [
        {
            "kind": "unicode_normalize",
            "args": {
                "kind": "nfkc"
            }
        },
        {
            "kind": "mapping",
            "args": {
                "mapping": {
                    "(株)": "株式会社"
                }            
            }
        },
        {
